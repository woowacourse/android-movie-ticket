<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Movie"
        tools:targetApi="31">
        <activity
            android:name=".presentation.movie_list.MovieListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.movie_detail.MovieDetailActivity"
            android:parentActivityName=".presentation.movie_list.MovieListActivity"/>
        <activity android:name=".presentation.purchase_confirmation.PurchaseConfirmationActivity"
            android:parentActivityName=".presentation.movie_list.MovieListActivity"/>
        <activity android:name=".presentation.seat_selection.SeatSelectionActivity"
            android:parentActivityName=".presentation.movie_list.MovieListActivity"/>
    </application>

</manifest>
