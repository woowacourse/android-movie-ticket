<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seat_background"
    tools:context=".ui.SeatSelectionActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lo_seat_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:paddingVertical="9dp"
            android:text="SCREEN"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/screen_background"
            android:textColor="@color/white"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_screen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TableLayout
            android:id="@+id/lo_seat"
            app:layout_constraintTop_toBottomOf="@id/tv_screen"
            android:layout_width="match_parent"
            android:layout_marginTop="56dp"
            android:layout_height="400dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <TextView
            tools:text="해리 포터와 마법사의 돌"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textColor="@color/woowa_black"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_seat_selection_title" />

        <TextView
            tools:text="18,000원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_seat_selection_title"
            app:layout_constraintStart_toStartOf="@id/tv_seat_selection_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/tv_seat_selection_price"
            android:textSize="18sp"
            android:textColor="@color/seat_price"
            android:layout_marginBottom="20dp" />


        <Button
            android:text="확인"
            android:background="@color/inactivate_button"
            android:layout_width="88dp"
            android:layout_height="0dp"
            android:id="@+id/btn_seat_selection"
            android:enabled="false"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>