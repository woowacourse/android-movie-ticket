<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moviedetail.MovieDetailActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail_booking_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/detail_poster"
                android:layout_width="match_parent"
                android:layout_height="341dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="21dp"
                android:layout_marginVertical="27dp">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="34dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detail_running_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        android:id="@+id/detail_booking_layout"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="30dp"
        android:paddingBottom="20dp">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/detail_date_spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/detail_time_spinner" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/detail_time_spinner"
            app:layout_constraintTop_toTopOf="@id/detail_date_spinner"
            app:layout_constraintStart_toEndOf="@id/detail_date_spinner"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:text="@string/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_minus_button"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/detail_date_spinner"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/detail_people_count"
            app:layout_constraintTop_toTopOf="@id/detail_minus_button"
            app:layout_constraintStart_toEndOf="@id/detail_minus_button"
            app:layout_constraintEnd_toStartOf="@id/detail_plus_button"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/detail_minus_button" />

        <Button
            android:text="@string/plus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_plus_button"
            app:layout_constraintTop_toTopOf="@id/detail_minus_button"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:textSize="25sp" />

        <Button
            android:id="@+id/detail_booking_button"
            android:text="@string/selecting_seats_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/detail_minus_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>