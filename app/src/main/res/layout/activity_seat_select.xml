<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".view.reservation.SeatSelectActivity">

    <TextView
        android:id="@+id/tv_screen"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginHorizontal="60dp"
        android:background="@color/dark_gray"
        android:gravity="center"
        android:text="Screen"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tl_seat"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_screen">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/SeatTextViewB"
                android:text="A1" />

            <TextView
                style="@style/SeatTextViewB"
                android:text="A2" />

            <TextView
                style="@style/SeatTextViewB"
                android:text="A3" />

            <TextView
                style="@style/SeatTextViewB"
                android:text="A4" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/SeatTextViewB"
                android:text="B1" />

            <TextView
                style="@style/SeatTextViewB"
                android:text="B2" />

            <TextView
                style="@style/SeatTextViewB"
                android:text="B3" />

            <TextView
                style="@style/SeatTextViewB"
                android:text="B4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_C1"
                style="@style/SeatTextViewS"
                android:text="C1" />

            <TextView
                android:id="@+id/tv_C2"
                style="@style/SeatTextViewS"
                android:text="C2" />

            <TextView
                android:id="@+id/tv_C3"
                style="@style/SeatTextViewS"
                android:text="C3" />

            <TextView
                android:id="@+id/tv_C4"
                style="@style/SeatTextViewS"
                android:text="C4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_D1"
                style="@style/SeatTextViewS"
                android:text="D1" />

            <TextView
                android:id="@+id/tv_D2"
                style="@style/SeatTextViewS"
                android:text="D2" />

            <TextView
                android:id="@+id/tv_D3"
                style="@style/SeatTextViewS"
                android:text="D3" />

            <TextView
                android:id="@+id/tv_D4"
                style="@style/SeatTextViewS"
                android:text="D4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_E1"
                style="@style/SeatTextViewA"
                android:text="E1" />

            <TextView
                android:id="@+id/tv_E2"
                style="@style/SeatTextViewA"
                android:text="E2" />

            <TextView
                android:id="@+id/tv_E3"
                style="@style/SeatTextViewA"
                android:text="E3" />

            <TextView
                android:id="@+id/tv_E4"
                style="@style/SeatTextViewA"
                android:text="E4" />
        </TableRow>
    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_movie_info"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_confirm"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_seat_select_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cl_movie_info"
        app:layout_constraintStart_toStartOf="@id/cl_movie_info"
        app:layout_constraintTop_toTopOf="@id/cl_movie_info"
        tools:text="영화 제목 길이가 엄청 길어지면 어떻게 될까?두근두근" />

    <TextView
        android:id="@+id/tv_seat_select_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/cl_movie_info"
        app:layout_constraintStart_toStartOf="@id/tv_seat_select_movie_title"
        app:layout_constraintTop_toBottomOf="@id/tv_seat_select_movie_title"
        tools:text="25,000원" />

    <Button
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@color/purple_500"
        android:text="확인"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/cl_movie_info" />

</androidx.constraintlayout.widget.ConstraintLayout>
