<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.reservation.ReservationActivity">

    <ImageView
        android:id="@+id/iv_reservation_poster"
        android:layout_width="0dp"
        android:layout_height="340dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/lalaland" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_reservation_poster">

        <TextView
            android:id="@+id/tv_reservation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="라라랜드" />

        <TextView
            android:id="@+id/tv_reservation_screening_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="상영일: %s ~ %s"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_reservation_title"
            app:layout_constraintTop_toBottomOf="@id/tv_reservation_title"
            tools:text="상영일: 2025.4.1 ~ 2025.4.20" />

        <TextView
            android:id="@+id/tv_reservation_running_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_running_time"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/tv_reservation_screening_date"
            app:layout_constraintTop_toBottomOf="@id/tv_reservation_screening_date"
            tools:text="러닝타임: 120분" />

        <Spinner
            android:id="@+id/spinner_reservation_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_reservation_minus_ticket_count"
            app:layout_constraintEnd_toStartOf="@id/spinner_reservation_time"
            app:layout_constraintStart_toStartOf="@id/tv_reservation_running_time" />

        <Spinner
            android:id="@+id/spinner_reservation_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_reservation_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/spinner_reservation_date"
            app:layout_constraintTop_toTopOf="@id/spinner_reservation_date" />

        <Button
            android:id="@+id/btn_reservation_minus_ticket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="-"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/btn_reservation_select_complete"
            app:layout_constraintStart_toStartOf="@id/spinner_reservation_date" />

        <Button
            android:id="@+id/btn_reservation_plus_ticket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/spinner_reservation_time"
            app:layout_constraintTop_toBottomOf="@id/spinner_reservation_time"
            app:layout_constraintTop_toTopOf="@id/btn_reservation_minus_ticket_count" />

        <TextView
            android:id="@+id/tv_reservation_ticket_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/btn_reservation_minus_ticket_count"
            app:layout_constraintEnd_toStartOf="@id/btn_reservation_plus_ticket_count"
            app:layout_constraintStart_toEndOf="@id/btn_reservation_minus_ticket_count"
            app:layout_constraintTop_toTopOf="@id/btn_reservation_minus_ticket_count" />

        <Button
            android:id="@+id/btn_reservation_select_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="선택 완료"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/btn_reservation_plus_ticket_count"
            app:layout_constraintStart_toStartOf="@id/btn_reservation_minus_ticket_count" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>