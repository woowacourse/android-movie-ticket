<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_booking_complete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".booking.complete.BookingCompleteActivity">

    <TextView
        android:id="@+id/tv_booking_complete_cancel_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_250"
        android:paddingTop="68dp"
        android:paddingBottom="12dp"
        android:text="@string/booking_complete_cancel_notice"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_booking_complete_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_booking_complete_cancel_notice"
        tools:text="영화 제목" />

    <TextView
        android:id="@+id/tv_booking_complete_movie_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_booking_complete_movie_title"
        tools:text="2025.4.1 11:00" />

    <TextView
        android:id="@+id/tv_booking_complete_ticket_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/booking_complete_line"
        app:layout_constraintEnd_toStartOf="@+id/booking_complete_line"
        tools:text="일반 2명" />

    <TextView
        android:id="@+id/booking_complete_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_booking_complete_movie_date_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/booking_complete_seat_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/booking_complete_line"
        app:layout_constraintStart_toEndOf="@+id/booking_complete_line"
        tools:text="B3, D2" />

    <TextView
        android:id="@+id/tv_booking_complete_ticket_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_booking_complete_ticket_count"
        tools:text="26,000원 (현장 결제)" />
</androidx.constraintlayout.widget.ConstraintLayout>