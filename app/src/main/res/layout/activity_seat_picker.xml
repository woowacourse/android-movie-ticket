<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SeatPickerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/seat_picker_background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ConstraintLayout"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            android:paddingHorizontal="34dp"
            android:paddingBottom="174dp">

            <TextView
                android:text="@string/screen"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:id="@+id/screen"
                android:background="@color/screen_background"
                android:textColor="@color/white"
                android:gravity="center"
                tools:layout_conversion_absoluteHeight="34dp"
                tools:layout_conversion_absoluteWidth="292dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/screen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="56dp"
                app:layout_constraintDimensionRatio="4:5"
                android:weightSum="5"
                android:id="@+id/layout_seat">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_3"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_5"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_6"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_7"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_8"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_9"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_10"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_11"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_12"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_13"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_14"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_15"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_16"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_17"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_18"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_19"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/seat_view_20"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="22sp"
                        android:background="@color/white" />
                </TableRow>
            </TableLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seat_picker_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/seat_picker_price"
            app:layout_constraintVertical_chainStyle="packed"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seat_picker_price"
            app:layout_constraintTop_toBottomOf="@id/seat_picker_title"
            app:layout_constraintStart_toStartOf="@id/seat_picker_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:textColor="#727272" />

        <TextView
            android:text="@string/button_seat_picker_done"
            android:layout_width="88dp"
            android:layout_height="0dp"
            android:id="@+id/seat_picker_done_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:background="@color/seat_picker_done_button_off"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>