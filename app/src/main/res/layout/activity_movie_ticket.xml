<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MovieTicketActivity">

    <TextView
        android:id="@+id/ticket_guide"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:text="@string/ticket_cancel_guide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="bottom|center"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@color/ticket_guide_background"/>

    <TextView
        android:id="@+id/ticket_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ticket_guide"
        android:textAlignment="center"
        android:layout_marginTop="31dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginHorizontal="14dp"/>

    <TextView
        android:id="@+id/ticket_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ticket_title"
        app:layout_constraintEnd_toEndOf="@id/ticket_title"
        app:layout_constraintTop_toBottomOf="@id/ticket_title"
        android:textAlignment="center"
        android:layout_marginTop="9dp"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/ticket_reserved_seats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ticket_title"
        app:layout_constraintEnd_toEndOf="@id/ticket_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/ticket_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ticket_title"
        app:layout_constraintEnd_toEndOf="@id/ticket_title"
        app:layout_constraintTop_toBottomOf="@id/ticket_reserved_seats"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>