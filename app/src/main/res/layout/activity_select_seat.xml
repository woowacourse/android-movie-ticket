                        android:textColor="@color/a_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_E4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="E4"
                        android:textColor="@color/a_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lv_select_seat_bottom_info"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/tv_select_seat_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="해리 포터와 마법사의 돌" />

            <TextView
                android:id="@+id/tv_select_seat_selected_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:text="25,000원" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_select_seat_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/disabled_btn_color"
            android:clickable="true"
            android:gravity="center"
            android:paddingStart="27dp"
            android:paddingEnd="27dp"
            android:text="@string/btn_select_seat_submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
