<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_select_seat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/select_seat_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/lv_select_seat_bottom_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/select_seat_screen_background"
                android:gravity="center"
                android:padding="9dp"
                android:text="SCREEN"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TableLayout
                android:id="@+id/tl_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:stretchColumns="*">

                <TableRow>

                    <TextView
                        android:id="@+id/seat_A1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="A1"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_A2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="A2"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_A3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="A3"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_A4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="A4"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/seat_B1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="B1"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_B2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="B2"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_B3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="B3"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seat_B4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="B4"
                        android:textColor="@color/b_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/seat_C1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:paddingTop="26dp"
                        android:paddingBottom="26dp"
                        android:text="C1"
                        android:textColor="@color/s_seat_color"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
